                Attribute {
                    name = templates
                    type = catalog:Template
                    lower = 0
                    upper = {}
                    isComposite = true
                    opposite = catalog:Template/attributes:item
                }
            }
        }
        Class {
            name = ProductGroup
            superClass = catalog:Item
