                Attribute {
                    name = propertyGroup
                    type = catalog:PropertyGroup
                    opposite = catalog:PropertyGroup/attributes:properties
                }
*/
                Attribute {
                    name = item
                    type = catalog:Item
                    lower = 0
                    opposite = catalog:Item/attributes:properties
                }
                Attribute {
                    name = type
                    type = catalog:PropertyType
                }
                Attribute {
                    name = enumValues
                    type = catalog:EnumValue
                    isComposite = true
                    lower = 1
                    upper = {}
                }
            }
        }
