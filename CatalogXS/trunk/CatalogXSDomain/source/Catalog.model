*/
        Class {
            name = EnumValue
            attributes = {
                Attribute {
                    name = value
                    type = primitive:Integer
                }
                Attribute {
                    name = label
                    type = catalog:Label
                    isComposite = true
                    lower = 0
                    upper = {}
                }
            }
        }
        Class {
            name = CatalogView            
            attributes = {
                Attribute {
                    name = name
                    type = primitive:String
