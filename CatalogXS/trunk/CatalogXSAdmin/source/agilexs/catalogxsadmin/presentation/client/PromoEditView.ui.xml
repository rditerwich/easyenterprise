<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:dp='urn:import:com.google.gwt.user.datepicker.client'
    >
  <ui:with field='res' type='agilexs.catalogxsadmin.presentation.client.ResourceBundle'/>
  <ui:style>
    .promo { border-bottom:1px solid #EFEFEF; }
    .buttons { margin:0 auto; }
    .button { margin:7px;valign:middle;text-align:center; }
  </ui:style>
  <g:FlowPanel>
    <g:HTMLPanel>
	    <table>
	      <tr>
		     <td colspan="2">Product:</td>
		     <td><g:SuggestBox ui:field="productFilter" /></td>
		    </tr>
		    <tr>
		     <td colspan="2">Start Date:</td>
		     <td><dp:DateBox ui:field="startDate" /></td>
		    </tr>
		    <tr>
		     <td colspan="2">End Date:</td>
		     <td><g:InlineHTML ui:field="endDate" /></td>
		    </tr>
		    <tr>
		     <td>Price:</td>
		     <td>&euro;</td>
		     <td><g:TextBox visibleLength="7" maxLength="7" ui:field="price" /></td>
		    </tr>
		    <tr>
		     <td colspan="2">Discount Volume:</td>
		     <td><g:TextBox visibleLength="3" maxLength="3" ui:field="volume" /></td>
		    </tr>
	    </table>
    </g:HTMLPanel> 
    <g:FlowPanel styleName="buttons" ><g:Button styleName="button" ui:field="saveButton" >Save</g:Button><g:Anchor styleName="button" ui:field="cancelButton" >Cancel</g:Anchor></g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>